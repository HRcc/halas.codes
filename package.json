{
  "name": "halas.codes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "build:css": "postcss src/styles/app.css -o src/styles/compiled/app.css",
    "watch:css": "postcss src/styles/app.css -o src/styles/compiled/app.css -w",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "dev": "npm run watch:css & react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "axios": "^0.18.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest-enzyme": "^6.0.0",
    "postcss-cli": "^5.0.0",
    "react-test-renderer": "^16.3.2",
    "tailwindcss": "^0.5.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/bootstrap/*",
      "!src/index.js",
      "!src/setupTests.js"
    ]
  }
}
